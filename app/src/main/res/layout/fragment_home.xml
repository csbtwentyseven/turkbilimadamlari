<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent">
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/nasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="SEMERKAND'A"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/hosgeldiniz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="HOŞ GELDİNİZ!"
            android:textSize="48sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="GEÇMİŞTE YAŞAMIŞ YA DA GÜNÜMÜZDE YAŞAMAKTA OLAN TÜRK BİLİM ADAMLARINI ESNEK,SADE VE KOLAY BİR ŞEKİLDE TANITMAK AMACIYLA HAZIRLANMIŞTIR."
        android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:text="İSMİNİ KADİM TÜRK ŞEHRİ,BİLİMİN DOĞUMEVİ OLAN SEMERKAND'DAN ALAN UYGULAMAMIZ TÜRKLERİN BİLİME VE İNSANLIĞA KATKILARINI GÖZLER ÖNÜNE SERMEKTEDİR."
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:text="UYGULAMAMIZIN NASIL KULLANILDIĞI AŞAĞIDAKİ GÖRSELDE TARİF EDİLMEKTEDİR.BİLİMLE KALIN!"
            android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text='NOT:Teknik Detaylar ve Diğer Ayrıntılar İçin Açılır Menümüzün En Altında Bulunan "Proje Hakkında" Sekmesine Lütfen Göz Atın.' />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Nasıl Kullanılır?"
        android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="423dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/semerkand2" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>

